<Page x:Class="BombPeli.ConfigureGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BombPeli"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfigureGame">

    <Grid>
        <TextBox x:Name="GameName" HorizontalAlignment="Left" Margin="122,60,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Game name" HorizontalAlignment="Left" Margin="43,58,0,0" VerticalAlignment="Top"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="43,116,0,0" VerticalAlignment="Top" Click="CancelButton_Click" Width="60" Padding="5"/>
        <Button x:Name="PublishButton" Content="Publish" HorizontalAlignment="Left" Margin="182,116,0,0" VerticalAlignment="Top" Click="PublishButton_Click" Width="60" Padding="5"/>
        <Label x:Name="ErrorMsgDisplay" Content="Label" HorizontalAlignment="Left" Margin="43,173,0,0" VerticalAlignment="Top" Height="200" Width="208"/>

    </Grid>
</Page>
